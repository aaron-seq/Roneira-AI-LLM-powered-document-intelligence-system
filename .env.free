# ==============================================================================
# Free Deployment Environment Configuration
# Optimized for open source and free hosting platforms
# ==============================================================================

# --- General Application Settings ---
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secure-secret-key-change-this-in-production

# --- Server Configuration ---
HOST=0.0.0.0
PORT=8000
WORKERS=2

# --- CORS Settings ---
ALLOWED_ORIGINS=*

# --- Database Configuration (SQLite for free deployment) ---
DATABASE_URL=sqlite+aiosqlite:///./roneira.db
# Alternative PostgreSQL (if using managed DB):
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname

# --- Redis Configuration ---
REDIS_URL=redis://localhost:6379/0
# Alternative for managed Redis:
# REDIS_URL=redis://user:password@host:port/db

# --- Local LLM Configuration (Ollama with DeepSeek) ---
USE_LOCAL_LLM=true
OLLAMA_HOST=localhost:11434
LLM_MODEL_NAME=deepseek-coder:6.7b
DEEPSEEK_MODEL_FALLBACK=deepseek-r1:7b
OLLAMA_TIMEOUT=120

# --- DeepSeek Cloud API (Fallback) ---
ENABLE_CLOUD_FALLBACK=true
DEEPSEEK_API_URL=https://api.deepseek.com/v1
DEEPSEEK_API_KEY=your-deepseek-api-key-optional

# --- Document Processing Configuration ---
OCR_ENGINE=tesseract
USE_EASYOCR=true
MAX_FILE_SIZE_MB=50
UPLOAD_PATH=./uploads
ALLOWED_FILE_EXTENSIONS=.pdf,.docx,.jpg,.jpeg,.png,.txt

# --- Authentication Settings ---
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# --- Performance Settings ---
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300
ENABLE_CACHING=true
CACHE_TTL=3600

# --- Free Hosting Platform Specific ---
# Railway
RAILWAY_STATIC_URL=
RAILWAY_GIT_COMMIT_SHA=

# Render
RENDER_SERVICE_ID=
RENDER_GIT_COMMIT=

# Heroku
DYNO=
HEROKU_APP_NAME=

# --- Monitoring & Logging ---
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT=json
LOG_FILE=./logs/roneira.log

# --- Feature Flags ---
ENABLE_WEBSOCKET=true
ENABLE_BACKGROUND_TASKS=true
ENABLE_FILE_PREVIEW=true
ENABLE_BULK_UPLOAD=false

# --- Security Settings ---
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
ENABLE_CORS=true
TRUST_PROXY=true

# --- Model Configuration ---
MODEL_TEMPERATURE=0.1
MODEL_MAX_TOKENS=2048
MODEL_TOP_P=0.9
CONTEXT_WINDOW_SIZE=4096

# --- Document Intelligence Settings ---
EXTRACT_TABLES=true
EXTRACT_FORMS=true
EXTRACT_KEY_VALUE_PAIRS=true
SUMMARIZE_DOCUMENTS=true
GENERATE_INSIGHTS=true